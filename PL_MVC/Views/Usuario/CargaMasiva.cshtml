@model ML.Result

@{ ViewBag.Title = "CargaMasiva";
 Layout = "~/Views/Shared/_Layout.cshtml"; 
 }

<h2>CargaMasiva</h2>

@using (Html.BeginForm("CargaMasiva", "Usuario", new { @Model.Correct}, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="input-group-addon">
            <div class="col-md-3">
                <input type="file" id="fuUsuarios" name="ExcelUsuarios" />
            </div>
            
            @if (!Model.Correct)
            {
            <div class="col-md-1">
                <input type="submit" value="Procesar" class="btn btn-info" />
            </div>
            }
            else
            {
            <div class="col-md-1">
                <input type="submit" value="Iniciar Carga" class="btn btn-success" />
            </div>
            }
        </div>
        <br />
    </div>
}
@Html.HiddenFor(model => Model.Correct)
            <div class="row">
                <div class="col-md-12">
                    @if (Model.Objects != null)
                         {
                        <table class="table table-bordered table-responsive">
                            <thead>
                                <tr class="text-center">
                                    <td>IdRegistro</td>
                                    <td>Error</td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (ML.ErrorExcel error in Model.Objects)
                    {
                                    <tr class="text-center">
                                        <td>@error.IdRegistro</td>
                                        <td>@error.Message</td>
                                    </tr>}
                            </tbody>
                        </table>
                    }
        else
        {

        }
                </div>
            </div>
